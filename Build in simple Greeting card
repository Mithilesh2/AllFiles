import React from 'react';

const GreetingCard = ({ name, occasion }) => {
  return (
    <div className="greeting-card">
      <h2>Hello, {name}!</h2>
      <p>Wishing you a fantastic {occasion}!</p>
    </div>
  );
};

export default GreetingCard;
import React from 'react';
import GreetingCard from './GreetingCard';

const App = () => {
  return (
    <div>
      <GreetingCard name="John" occasion="Birthday" />
      <GreetingCard name="Alice" occasion="Anniversary" />
      <GreetingCard name="Bob" occasion="Graduation" />
    </div>
  );
};

export default App;


